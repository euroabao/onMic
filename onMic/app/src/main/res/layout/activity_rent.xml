<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RentActivity"
    android:orientation="vertical"
    android:gravity="center">

    <ImageView
        android:id="@+id/img"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/karaoke" />


        <TextView
            android:id="@+id/head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/nexabold"
            android:text="Rental Form"
            android:textColor="@color/orange"
            android:textSize="40sp" />

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/popupbg"
        android:paddingBottom="20dp"
        android:paddingTop="20dp">

        <EditText
            android:id="@+id/etName"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:drawableStart="@drawable/user"
            android:drawablePadding="10dp"
            android:fontFamily="@font/nexalight"
            android:hint="Name"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/etAddress"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:drawableStart="@drawable/address"
            android:drawablePadding="10dp"
            android:fontFamily="@font/nexalight"
            android:hint="Address"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/etPhoneNumber"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:drawableStart="@drawable/phone"
            android:drawablePadding="10dp"
            android:fontFamily="@font/nexalight"
            android:hint="Phone Number"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvItemOrdered"
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:drawableStart="@drawable/bag"
            android:fontFamily="@font/nexalight"
            android:layout_gravity="center"
            android:text="Item:"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp"/>

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:theme="@style/RadioColorOrange"
            android:layout_marginTop="10dp">

            <RadioButton
                android:id="@+id/btn0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nexalight"
                android:text="6hrs"
                android:textSize="13sp"
                tools:ignore="TouchTargetSizeCheck" />

            <RadioButton
                android:id="@+id/btn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nexalight"
                android:text="12hrs"
                android:textSize="13sp"
                tools:ignore="TouchTargetSizeCheck" />

            <RadioButton
                android:id="@+id/btn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nexalight"
                android:text="24hrs"
                android:textSize="13sp"
                tools:ignore="TouchTargetSizeCheck" />

            <RadioButton
                android:id="@+id/btn3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nexalight"
                android:text="48hrs"
                android:textSize="13sp"
                tools:ignore="TouchTargetSizeCheck" />

        </RadioGroup>


    </LinearLayout>

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/radioGroup"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:background="@drawable/button1"
        android:fontFamily="@font/nexabold"
        android:text="Submit"
        android:textColor="@color/white" />


</LinearLayout>